# scripts/vilesql.env - Environment configuration for systemd
# VileSQL Service Configuration
# This file is sourced by the systemd service

# Server configuration
VILESQL_HOST=127.0.0.1
VILESQL_PORT=5000
VILESQL_ENV=production

# Database configuration
VILESQL_DATA_DIR=/var/lib/vilesql
VILESQL_BACKUP_DIR=/var/lib/vilesql/backups
VILESQL_MAX_CONNECTIONS=100

# Logging configuration
VILESQL_LOG_LEVEL=info
VILESQL_LOG_FORMAT=json
VILESQL_LOG_FILE=/var/log/vilesql/vilesql.log
VILESQL_ACCESS_LOG=/var/log/vilesql/access.log

# Security configuration
VILESQL_JWT_SECRET_FILE=/etc/vilesql/jwt.secret
VILESQL_API_KEY_FILE=/etc/vilesql/api.key
VILESQL_TLS_CERT_FILE=/etc/vilesql/tls.crt
VILESQL_TLS_KEY_FILE=/etc/vilesql/tls.key

# Performance tuning
VILESQL_WORKER_PROCESSES=auto
VILESQL_MAX_REQUEST_SIZE=10MB
VILESQL_REQUEST_TIMEOUT=30s
VILESQL_IDLE_TIMEOUT=120s

# Backup configuration
VILESQL_AUTO_BACKUP=true
VILESQL_BACKUP_INTERVAL=24h
VILESQL_BACKUP_RETENTION=7d

# Monitoring
VILESQL_METRICS_ENABLED=true
VILESQL_HEALTH_CHECK_INTERVAL=30s