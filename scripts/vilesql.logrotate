# scripts/vilesql.logrotate - Log rotation configuration

/var/log/vilesql/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 vilesql vilesql
    sharedscripts
    postrotate
        systemctl reload vilesql > /dev/null 2>&1 || true
    endscript
}

/var/log/vilesql-*.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 644 vilesql vilesql
    copytruncate
}
